{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lost Animator",
  "version": "0.3.0",
  "identifier": "com.richardegeli1.lostanimator",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Lost Animator",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      },
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main application capabilities",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "dialog:default",
            "dialog:allow-message",
            "fs:default",
            "fs:allow-read-text-file",
            "fs:allow-write-text-file",
            "fs:allow-app-read",
            "fs:allow-app-write",
            "fs:allow-app-read-recursive",
            "fs:allow-app-write-recursive",
            "fs:allow-appdata-read",
            "fs:allow-appdata-write",
            "fs:allow-appdata-read-recursive",
            "fs:allow-appdata-write-recursive",
            "fs:allow-home-read",
            "fs:allow-home-write",
            "fs:allow-home-read-recursive",
            "fs:allow-home-write-recursive",
            "opener:default",
            {
              "identifier": "opener:allow-open-path",
              "allow": [{ "path": "**" }]
            },
            "updater:default",
            "process:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDcyOUNDNjUwQUFGNTk4RjcKUldUM21QV3FVTWFjY21uTGJXdFBWMzBMNzJieHovT3dsd3hObWoxakN3V0VUWk9HbFRlNjhCZDgK",
      "endpoints": [
        "https://github.com/LostSuite/LostAnimator/releases/latest/download/latest.json"
      ]
    }
  }
}
