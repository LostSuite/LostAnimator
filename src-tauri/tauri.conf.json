{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lost Animator",
  "version": "0.1.0",
  "identifier": "com.richardegeli1.lostanimator",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Lost Animator",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main application capabilities",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "dialog:default",
            "fs:default",
            "opener:default",
            "updater:default",
            "process:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "REPLACE_WITH_YOUR_PUBLIC_KEY",
      "endpoints": [
        "https://github.com/Long-Lost-AS/LostAnimator/releases/latest/download/latest.json"
      ]
    }
  }
}
